<%= form_tag posts_new_path, method: :post, class: "form-horizontal" do %>
  <div class="form-group">
    <label for="twtty" >Write your twitty and be happy:</label>
  <input id="twtty" type="text" class="form-control" name="twitty">
  <input type="submit" class="btn btn-primary pull-right" value="Twitty">
  </div>
<%end%>

<% @posts.each do |post| %>
<div class="row">
  <div class="col-md-8">
        <p role="text">
        <%= post.text %>
      </p>
  </div>
  <div class="col-md-2">
      <%=link_to "Delete", delete_post_path(id: post.id), method: :delete %>
    </div>
</div>
<%end%>